<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rtv="http://schemas.android.com/apk/res/com.haoke.myphoenix"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/traseg_startTime"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_y_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_x_20"
                android:gravity="center_vertical"
                android:text="aa"
                android:textColor="#999999"
                android:textSize="@dimen/layout_y_20" >
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_y_2"
                android:background="#999999" >
            </View>

            <TextView
                android:id="@+id/traseg_endTime"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_y_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_x_20"
                android:gravity="center_vertical"
                android:text="bb"
                android:textColor="#999999"
                android:textSize="@dimen/layout_y_20" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:paddingLeft="@dimen/layout_x_10"
                android:id="@+id/traseg_juli"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_y_80"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="128dg"
                android:textColor="#999999"
                android:textSize="@dimen/layout_y_20" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_y_80" >

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_2"
            android:background="#999999" >
        </View>

      

        <View
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/layout_x_2"
            android:layout_height="@dimen/layout_y_88"
            android:background="#999999" >
        </View>

        <View
            android:layout_width="@dimen/layout_x_2"
            android:layout_height="@dimen/layout_y_88"
            android:layout_alignParentRight="true"
            android:background="#999999" >
        </View>

        <View
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/layout_x_2"
            android:layout_height="@dimen/layout_y_88"
            android:layout_marginRight="@dimen/layout_x_120"
            android:background="#999999" >
        </View>
    </RelativeLayout>

</RelativeLayout>