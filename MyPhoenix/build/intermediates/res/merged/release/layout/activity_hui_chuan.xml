                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />
        </LinearLayout>
    </LinearLayout>

    <!-- 闹钟模式 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_x_20"
        android:layout_marginRight="@dimen/layout_x_20"
        android:layout_marginTop="@dimen/layout_y_18"
        android:background="@drawable/background_shape"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="right"
                android:text="@string/huichuan_2_1"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <ImageView
                android:id="@+id/hc_naozhong_zu_image1"
                android:layout_width="@dimen/layout_x_25"
                android:layout_height="@dimen/layout_x_25"
                android:layout_marginLeft="@dimen/layout_x_20"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="right"
                android:text="@string/huichuan_2_2"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <ImageView
                  android:id="@+id/hc_naozhong_zu_image2"
                android:layout_width="@dimen/layout_x_25"
                android:layout_height="@dimen/layout_x_25"
                android:layout_marginLeft="@dimen/layout_x_20"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="right"
                android:text="@string/huichuan_2_3"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                 android:id="@+id/hc_naozhong_zu1"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_2_4"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <TextView
                 android:id="@+id/hc_naozhong_zu_time1"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_y_28"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:background="@drawable/huichuan_kuang"
                android:gravity="center"
                android:text="14:00"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <ImageView
                 android:id="@+id/hc_naozhong_zu2"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:layout_marginLeft="@dimen/layout_x_35"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_2_5"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <TextView
                 android:id="@+id/hc_naozhong_zu_time2"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_y_28"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:background="@drawable/huichuan_kuang"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                 android:id="@+id/hc_naozhong_zu3"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_2_6"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <TextView
                 android:id="@+id/hc_naozhong_zu_time3"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_y_28"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:background="@drawable/huichuan_kuang"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <ImageView
                 android:id="@+id/hc_naozhong_zu4"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:layout_marginLeft="@dimen/layout_x_35"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
