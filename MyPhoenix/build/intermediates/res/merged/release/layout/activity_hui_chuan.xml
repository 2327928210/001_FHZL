                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />

            <TextView
                android:id="@+id/hc_naozhong_zu_time4"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_y_28"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:background="@drawable/huichuan_kuang"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />
        </LinearLayout>
    </LinearLayout>

    <!-- 最后 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_x_40"
        android:layout_marginRight="@dimen/layout_x_35"
        android:layout_marginTop="@dimen/layout_y_25"
        android:gravity="center"
        android:text="@string/huichuan_5_1"
        android:textColor="@color/red"
        android:textSize="@dimen/layout_x_20" />

   <Button
        android:id="@+id/btn_send"
        android:layout_width="@dimen/layout_x_400"
        android:layout_height="@dimen/layout_y_55"
        android:layout_marginTop="@dimen/layout_y_20"
        android:background="@drawable/shape_login_bt"
        android:text="@string/huichuan_5_2"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_x_22" />

</LinearLayout>