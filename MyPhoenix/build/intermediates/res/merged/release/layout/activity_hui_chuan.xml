<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context="com.haoke.iov.sendActivity.HuiChuanActivity" >

    <include layout="@layout/layout_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_x_20"
        android:layout_marginRight="@dimen/layout_x_20"
        android:layout_marginTop="@dimen/layout_y_18"
        android:background="@drawable/background_shape"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_30"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hc_mode_2nian"
                android:layout_width="@dimen/layout_x_25"
                android:layout_height="@dimen/layout_x_25"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_1_1"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                 android:id="@+id/hc_mode_3nian"
                android:layout_width="@dimen/layout_x_25"
                android:layout_height="@dimen/layout_x_25"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_1_2"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_20" />
        </LinearLayout>
    </LinearLayout>

    <!-- 定时模式 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_x_20"
        android:layout_marginTop="@dimen/layout_y_18"
        android:layout_marginRight="@dimen/layout_x_20"
        android:background="@drawable/background_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:gravity="center"
            android:text="@string/huichuan_3_1"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_20" />

        <EditText
            android:id="@+id/hc_dingshi_edit"
            android:layout_width="@dimen/layout_x_60"
            android:layout_height="@dimen/layout_x_28"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:background="@drawable/huichuan_kuang"
            android:gravity="center"
            android:text="0"
            android:maxLength="3"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:gravity="center"
            android:text="@string/huichuan_3_2"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_20" />
    </LinearLayout>

    <!-- 星期模式 -->

