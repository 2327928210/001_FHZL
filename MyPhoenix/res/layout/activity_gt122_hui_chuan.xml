<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context="com.haoke.iov.sendActivity.GT122HuiChuanActivity" >

    <include layout="@layout/layout_titlebar" />
    <!-- 定时模式 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_x_20"
        android:layout_marginRight="@dimen/layout_x_20"
        android:layout_marginTop="@dimen/layout_y_18"
        android:background="@drawable/background_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_dingshi"
            android:layout_width="@dimen/layout_x_28"
            android:layout_height="@dimen/layout_x_28"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/huichuan_p" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_x_12"
            android:gravity="center"
            android:text="@string/huichuan_3_1"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_18" />

        <EditText
            android:id="@+id/hc_dingshi_edit"
            android:layout_width="@dimen/layout_x_60"
            android:layout_height="@dimen/layout_x_28"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:background="@drawable/huichuan_kuang"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_x_15"
            android:gravity="center"
            android:text="@string/huichuan_fanwei"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_18" />
    </LinearLayout>
    
    
    <!-- 闹钟模式 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_x_20"
        android:layout_marginRight="@dimen/layout_x_20"
        android:layout_marginTop="@dimen/layout_y_18"
        android:background="@drawable/background_shape" >

        <ImageView
            android:id="@+id/image_naozhong"
            android:layout_width="@dimen/layout_x_28"
            android:layout_height="@dimen/layout_x_28"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/layout_x_10"
            android:scaleType="fitXY"
            android:src="@drawable/huichuan_n" />

        <LinearLayout
            android:id="@+id/naozhong_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_marginLeft="@dimen/layout_x_3"
            android:layout_toRightOf="@+id/image_naozhong"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="right"
                android:text="@string/huichuan_2_1"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

         
        </LinearLayout>

        <LinearLayout
            android:id="@+id/naozhong_rl2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_below="@+id/naozhong_rl1"
            android:layout_marginLeft="@dimen/layout_x_8"
            android:layout_toRightOf="@+id/image_naozhong"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hc_naozhong_zu1"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_2_4"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <TextView
                android:id="@+id/hc_naozhong_zu_time1"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_y_28"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:background="@drawable/huichuan_kuang"
                android:gravity="center"
                android:text="14:00"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <ImageView
                android:id="@+id/hc_naozhong_zu2"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:layout_marginLeft="@dimen/layout_x_25"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_2_5"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <TextView
                android:id="@+id/hc_naozhong_zu_time2"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_y_28"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:background="@drawable/huichuan_kuang"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/naozhong_rl3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_below="@+id/naozhong_rl2"
            android:layout_marginLeft="@dimen/layout_x_8"
            android:layout_toRightOf="@+id/image_naozhong"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hc_naozhong_zu3"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_2_6"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <TextView
                android:id="@+id/hc_naozhong_zu_time3"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_y_28"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:background="@drawable/huichuan_kuang"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <ImageView
                android:id="@+id/hc_naozhong_zu4"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:layout_marginLeft="@dimen/layout_x_25"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_2_7"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <TextView
                android:id="@+id/hc_naozhong_zu_time4"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_y_28"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:background="@drawable/huichuan_kuang"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 星期模式 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_x_20"
        android:layout_marginRight="@dimen/layout_x_20"
        android:layout_marginTop="@dimen/layout_y_18"
        android:background="@drawable/background_shape" >

        <ImageView
            android:id="@+id/image_xiangqi"
            android:layout_marginTop="@dimen/layout_y_10"
            android:layout_width="@dimen/layout_x_28"
            android:layout_height="@dimen/layout_x_28"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/huichuan_n" />

        <LinearLayout
            android:id="@+id/qingqi_rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_marginLeft="@dimen/layout_x_3"
            android:layout_toRightOf="@+id/image_xiangqi"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_4_1"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <TextView
                android:id="@+id/hc_week_time"
                android:layout_width="@dimen/layout_x_60"
                android:layout_height="@dimen/layout_y_28"
                android:layout_marginLeft="@dimen/layout_x_20"
                android:background="@drawable/huichuan_kuang"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qingqi_rl2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_below="@+id/qingqi_rl1"
            android:layout_marginLeft="@dimen/layout_x_8"
            android:layout_toRightOf="@+id/image_xiangqi"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hc_week1_image"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_4_2"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <ImageView
                android:id="@+id/hc_week2_image"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:layout_marginLeft="@dimen/layout_x_25"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_4_3"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <ImageView
                android:id="@+id/hc_week3_image"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:layout_marginLeft="@dimen/layout_x_25"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_4_4"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qingqi_rl3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_below="@+id/qingqi_rl2"
            android:layout_marginLeft="@dimen/layout_x_8"
            android:layout_toRightOf="@+id/image_xiangqi"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hc_week4_image"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_4_5"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <ImageView
                android:id="@+id/hc_week5_image"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:layout_marginLeft="@dimen/layout_x_25"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_4_6"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />

            <ImageView
                android:id="@+id/hc_week6_image"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:layout_marginLeft="@dimen/layout_x_25"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_4_7"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qingqi_rl4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_y_40"
            android:layout_below="@+id/qingqi_rl3"
            android:layout_marginLeft="@dimen/layout_x_8"
            android:layout_toRightOf="@+id/image_xiangqi"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/hc_week7_image"
                android:layout_width="@dimen/layout_x_36"
                android:layout_height="@dimen/layout_x_36"
                android:scaleType="fitXY"
                android:src="@drawable/huichuan_check_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:gravity="center"
                android:text="@string/huichuan_4_8"
                android:textColor="@color/black"
                android:textSize="@dimen/layout_x_18" />
        </LinearLayout>
    </RelativeLayout>


    <!-- 最后 -->

    <Button
        android:id="@+id/btn_send"
        android:layout_width="@dimen/layout_x_400"
        android:layout_height="@dimen/layout_y_55"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_y_50"
        android:background="@drawable/shape_login_bt"
        android:text="@string/huichuan_5_2"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_x_22" />

</LinearLayout>